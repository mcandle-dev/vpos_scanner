<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership Information"
        android:textStyle="bold"
        android:textSize="19sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234-4567-5678-1223"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="****-2200"
        android:textColor="#888"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnMobilePayment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Mobile Payment"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etOrderNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Order Number"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnOfflinePayment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Offline Payment"
        android:textStyle="bold"/>
</LinearLayout>
