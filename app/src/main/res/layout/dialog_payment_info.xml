<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="결제 방법 선택"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 전화번호 -->
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="2200"
        android:textColor="#888888"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- (1) 멤버십 카드번호 라벨 추가 & (2) 왼쪽 정렬 -->
    <TextView
        android:id="@+id/tvCardNumberLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="멤버십 카드번호"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        android:gravity="start" />

    <!-- 카드번호: (2) 왼쪽 정렬, (3) 아래 여백 확대 -->
    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="start"
        android:text="1234-4567-5678-1223"
        android:textColor="#212121"
        android:textSize="18sp" />

    <!-- Mobile Payment 버튼 (기존: OffLine Payment) -->
    <Button
        android:id="@+id/btnOfflinePayment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_dark_rounded"
        android:text="OffLine Payment"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- (4) 주문번호 라벨 추가 -->
    <TextView
        android:id="@+id/tvOrderNumberLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문번호 (최대8자리)"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        android:gravity="start" />

    <!-- 주문번호 입력 -->
    <EditText
        android:id="@+id/etOrderNumber"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="18dp"
        android:background="#F5F5F5"
        android:hint="Order Number"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"
        android:textColor="#212121"
        android:textColorHint="#888888"
        android:inputType="text"
        android:maxLines="1"
        android:maxLength="8"
        android:ellipsize="end" />

    <!-- Offline Payment 버튼 -->
    <Button
        android:id="@+id/btnMobilePayment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_dark_rounded"
        android:text="Mobile Payment"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
